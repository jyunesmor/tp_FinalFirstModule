<form action="/api/products" method="POST">
	<div class="mb-3">
		<label for="title" class="form-label">Nombre Producto</label>
		<input type="text" class="form-control" id="title" name="title" />
	</div>
	<div class="mb-3">
		<label for="code" class="form-label">Codigo Producto</label>
		<input type="text" class="form-control" id="code" name="code" />
	</div>
	<div class="mb-3">
		<label for="price" class="form-label">Precio Producto</label>
		<input
			type="number"
			class="form-control"
			id="price"
			name="price"
			min="0"
			step="0.01"
		/>
	</div>
	<div class="mb-3">
		<label for="stock" class="form-label">Stock Producto</label>
		<input type="number" class="form-control" id="stock" name="stock" />
	</div>
	<div class="mb-3">
		<label for="category" class="form-label">Categoria Producto</label>
		<input type="text" class="form-control" id="category" name="category" />
	</div>
	<div class="mb-3">
		<label for="description" class="form-label">Descripción Producto</label>
		<input
			type="text"
			class="form-control"
			id="description"
			name="description"
		/>
	</div>
	<div class="mb-3">
		<label for="status" class="form-label">Condición Producto</label>
		<input type="text" class="form-control" id="status" name="status" />
	</div>
	<div class="mb-3">
		<label for="thumbnails" class="form-label">Ruta Imagen Producto</label>
		<input type="text" class="form-control" id="thumbnails" name="thumbnails" />
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>